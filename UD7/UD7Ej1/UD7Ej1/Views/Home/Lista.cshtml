@model List<UD7Ej1.Models.Entities.Persona>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
	ViewData["Title"] = "Lista Personas";
}

<h1>Listado de Personas</h1>
<table>
	<thead>
		<tr>
			<th>Id</th>
			<th>Nombre</th>
			<th>Edad</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var persona in Model)
		{
			<tr>
				<td>@persona.id</td>
				<td>@persona.nombre</td>
				<td>@persona.edad</td>
			</tr>
		}
	</tbody>
</table>
@Html.ActionLink("Detalles de la persona numero 2", "Detalle2", "Home")
